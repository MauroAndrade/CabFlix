@model Cabflix.Models.ViewModel.CentroCustoViewModel 

@using Cabflix.Models.Database;

@{
    ViewBag.Title = "Create";
}


<section class="content margin-top-10">

    @using (Html.BeginForm("Create", "CentroCusto", FormMethod.Post, new { @class = "col s12" }))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Cadastrar Centro de Custo</h3>

                        @*<div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>*@
                    </div>
                    <div class="card-body" style="display: block;">


                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group floating-label">
                                    @Html.LabelFor(Model => Model.FkPai)
                                    @Html.DropDownListFor(Model => Model.FkPai, new SelectList((IEnumerable<CentroCusto>
                                                )ViewBag.CentroCusto, "Id", "Nome"),
                                                "Selecione", new { @id = "Id", @class = "form-control validate" })
                                    @Html.ValidationMessageFor(Model => Model.FkPai)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(Model => Model.Nome)
                                    @Html.EditorFor(Model => Model.Nome, "", new { htmlAttributes = new { @class = "form-control validate" } })
                                    @Html.ValidationMessageFor(Model => Model.Nome)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(Model => Model.Classificacao)
                                    @Html.EditorFor(Model => Model.Classificacao, "", new { htmlAttributes = new { @class = "form-control validate" } })
                                    @Html.ValidationMessageFor(Model => Model.Classificacao)
                                </div>



                            </div>

                        </div>


                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>

        </div>
        <div class="row">
            <div class="col-12">
                <a href="@Url.Action("Index", "CentroCusto")" class="btn btn-secondary">Cancelar</a>
                <input type="submit" value="Salvar" class="btn btn-success float-right">
            </div>
        </div>
    }
</section>

