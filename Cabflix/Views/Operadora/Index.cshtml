@model List<Cabflix.Models.Database.Operadora>

@{
    ViewBag.Title = "Index";
}

<section class="content margin-top-10">

    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Operadoras</h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Create", "Operadora")" class="btn btn-tool" data-toggle="tooltip" title="Adicionar Operadora"><i class="fas fa-plus"></i></a>
                    </div>
                </div>
                <div class="card-body" style="display: block;">

                    <table id="datatable" class="table table-bordered table-striped table-row">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="@item.Id">
                                    <td>@item.Nome</td>
                                    <td class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Edit", "Operadora", new { id = item.Id})" class="btn btn-info"><i class="fas fa-pencil-alt"></i></a>
                                        <a href="@Url.Action("Delete", "Operadora", new { id = item.Id})" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Nome</th>
                                <th>Ação</th>
                            </tr>
                        </tfoot>
                    </table>



                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>

    </div>


</section>


